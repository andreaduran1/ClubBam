<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:backgroundTint="@color/colorBackground"
    tools:context=".formularioRegistro">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="410dp"
        android:layout_height="127dp"
        android:background="@drawable/toolbar_bg"
        android:backgroundTint="@color/colorPrimaryTomato"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/outline_arrow_left_alt_24"
        app:menu="@menu/toolbar_menu"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/materialTextView"
        android:layout_width="305dp"
        android:layout_height="59dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="12dp"
        android:paddingTop="10dp"
        android:text="Formulario de Registro"
        android:textAlignment="center"
        android:textColor="@color/colorOnSecondary"
        android:textSize="28sp"
        app:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.562" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtIn"
        android:layout_width="305dp"
        android:layout_height="59dp"
        android:layout_marginTop="150dp"
        android:elevation="12dp"
        android:text="Ingresá los datos personales"
        android:textColor="@color/colorText"
        android:textSize="22sp"
        app:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputNombre"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:hint="Nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputNombre"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/rounded_edittext_background"
            android:elevation="12dp"
            android:textColor="@color/colorText" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputApellido"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Apellido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputNombre">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputApellido"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/rounded_edittext_background"
            android:elevation="12dp"
            android:textColor="@color/colorText" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputDomicilio"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Domicilio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputApellido">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputDomicilio"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/rounded_edittext_background"
            android:elevation="12dp"
            android:textColor="@color/colorText" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputMail"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputDomicilio">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputMail"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/rounded_edittext_background"
            android:elevation="12dp"
            android:textColor="@color/colorText" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputTelefono"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Telefono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputMail">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputTelefono"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/rounded_edittext_background"
            android:elevation="12dp"
            android:inputType="phone"
            android:textColor="@color/colorText" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputFechaNac"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Fecha Nac."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputTelefono">

       <!-- <DatePicker
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/datePicker"
            android:layout_gravity="center"
            /> -->

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputFechaNac"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/rounded_edittext_background"
            android:elevation="12dp"
            android:inputType="datetime|date"
            android:textColor="@color/colorText" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchApto"
        android:layout_width="188dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="52dp"
        android:backgroundTint="@color/colorPrimaryTomato"
        android:backgroundTintMode="add"
        android:fontFamily="sans-serif-medium"
        android:text="Presenta apto físico"
        android:textAlignment="viewStart"
        android:textColor="@color/colorTextSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputFechaNac" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSocio"
        android:layout_width="157dp"
        android:layout_height="53dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="Socio"
        android:textColor="@color/colorChipBackground"
        app:cornerRadius="15dp"
        app:icon="@drawable/baseline_groups_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputFechaNac" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNoSocio"
        android:layout_width="157dp"
        android:layout_height="53dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="No socio"
        android:textColor="@color/colorChipBackground"
        app:cornerRadius="15dp"
        app:icon="@drawable/baseline_person_24"
        app:layout_constraintEnd_toStartOf="@+id/btnSocio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputFechaNac" />


</androidx.constraintlayout.widget.ConstraintLayout>