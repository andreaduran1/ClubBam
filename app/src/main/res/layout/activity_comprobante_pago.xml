<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".Carnet">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/toolbar_bg"
        android:backgroundTint="@color/colorPrimaryTomato"
        android:elevation="10dp"
        android:paddingTop="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/outline_arrow_left_alt_24"
        app:menu="@menu/toolbar_menu"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/materialTextView"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:elevation="12dp"
        android:paddingTop="20dp"
        android:text="Comprobante de pago"
        android:textAlignment="center"
        android:textColor="@color/colorOnSecondary"
        android:textSize="28sp"
        app:fontFamily="sans-serif-regular"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCentral"
        android:layout_width="352dp"
        android:layout_height="440dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:elevation="12dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">


        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            app:srcCompat="@drawable/logo" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtComprobante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:elevation="12dp"
            android:layout_marginRight="20dp"
            android:text="Comprobante de pago"
            android:layout_gravity="right"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            app:fontFamily="sans-serif-medium" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtNroComprobante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:elevation="12dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:text="NÂº 00114523"
            android:textColor="@color/colorText"
            android:textSize="22sp"
            app:fontFamily="sans-serif-medium" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtFechaPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="170dp"
            android:elevation="12dp"
            android:text="Fecha de pago: 29/08/2025"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            app:fontFamily="sans-serif-regular" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:elevation="12dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:text="Nombre: Ana Perez"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            app:fontFamily="sans-serif-regular" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtNroDni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:elevation="12dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:text="DNI: 38745899"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            app:fontFamily="sans-serif-regular" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtImporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:elevation="12dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:text="Importe: $15000"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            app:fontFamily="sans-serif-regular" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtMedioPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="330dp"
            android:elevation="12dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:text="Medio de pago: Tarjeta"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            app:fontFamily="sans-serif-regular" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtCantCuotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:elevation="12dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:text="Cantidad de cuotas: 1"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            app:fontFamily="sans-serif-regular" />


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDescargar"
        android:layout_width="158dp"
        android:layout_height="53dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="Descargar"
        android:textColor="@color/colorChipBackground"
        app:cornerRadius="15dp"
        app:icon="@drawable/outline_download_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardCentral" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHome"
        android:layout_width="158dp"
        android:layout_height="53dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="Ir a Inicio"
        android:textColor="@color/colorChipBackground"
        app:cornerRadius="15dp"
        app:icon="@drawable/outline_home_24"
        app:layout_constraintEnd_toStartOf="@+id/btnDescargar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardCentral" />



</androidx.constraintlayout.widget.ConstraintLayout>