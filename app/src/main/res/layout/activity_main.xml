<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:elevation="0dp"
    tools:context=".ui.main.MainActivity">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCentralLog"
        android:layout_width="313dp"
        android:layout_height="495dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/colorChipBackground"
        android:elevation="12dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="83dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:elevation="6dp"
        app:layout_constraintEnd_toEndOf="@+id/cardCentralLog"
        app:layout_constraintStart_toStartOf="@+id/cardCentralLog"
        app:layout_constraintTop_toTopOf="@+id/cardCentralLog"
        app:srcCompat="@drawable/logo" />


    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext_background"
        android:elevation="6dp"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Usuario"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:textAlignment="textStart"
        android:textColor="@color/colorTextSecondary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/cardCentralLog"
        app:layout_constraintStart_toStartOf="@+id/cardCentralLog"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext_background"
        android:elevation="6dp"
        android:ellipsize="none"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/colorTextSecondary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/cardCentralLog"
        app:layout_constraintStart_toStartOf="@+id/cardCentralLog"
        app:layout_constraintTop_toBottomOf="@+id/txtUsuario" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:elevation="6dp"
        android:text="Inicia Sesión"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/cardCentralLog"
        app:layout_constraintStart_toStartOf="@+id/cardCentralLog"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/tvRecupero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:elevation="6dp"
        android:text="Hacé click acá."
        android:textColor="@color/colorError"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/cardCentralLog"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="4dp"
        android:elevation="6dp"
        android:text="¿Olvidaste tu contraseña?"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/tvRecupero"
        app:layout_constraintStart_toStartOf="@+id/cardCentralLog"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="126dp"
        android:layout_height="50dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="92dp"
        android:backgroundTint="@color/colorPrimaryTomato"
        android:elevation="10dp"
        android:fontFamily="sans-serif-light"
        android:paddingTop="3dp"
        android:text="Ingresar"
        android:textAlignment="center"
        android:textColor="@color/colorChipBackground"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/cardCentralLog"
        app:layout_constraintStart_toStartOf="@+id/cardCentralLog"
        app:layout_constraintTop_toTopOf="@+id/textView4" />


</androidx.constraintlayout.widget.ConstraintLayout>