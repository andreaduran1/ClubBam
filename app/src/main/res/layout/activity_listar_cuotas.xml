<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:backgroundTint="@color/colorBackground"
    tools:context=".ListarCuotas">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:background="@drawable/toolbar_bg"
        android:backgroundTint="@color/colorPrimaryTomato"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/toolbar_menu"
        app:navigationIcon="@drawable/outline_arrow_left_alt_24" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/materialTextView"
        android:layout_width="305dp"
        android:layout_height="59dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="12dp"
        android:paddingTop="10dp"
        android:text="Listado de cuotas"
        android:textAlignment="center"
        android:textColor="@color/colorOnSecondary"
        android:textSize="28sp"
        app:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.562" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:elevation="12dp"
        android:text="¡Hay cuotas por vencer!"
        android:textColor="@color/colorText"
        android:textSize="22sp"
        app:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:elevation="12dp"
        android:text="Estas cuotas están pendientes de pago"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        app:fontFamily="sans-serif-light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMensaje" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardExterna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:backgroundTint="@color/colorBackground">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <!--BLOQUE QUE SE DEBE CREAR DINAMICAMENTE. DESDE AQUI HASTA ******-->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/colorPrimaryTomato"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/shapeableImageView"
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircularImageView"
                            tools:srcCompat="@tools:sample/avatars" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="5dp"
                            android:text="Marta Olazabal"
                            android:textColor="@color/colorText"
                            android:textSize="18sp"
                            app:fontFamily="sans-serif-ligt"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txt3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="5dp"
                            android:text="Socio N° 4567"
                            android:textColor="@color/colorText"
                            android:textSize="22dp"
                            app:fontFamily="sans-serif-ligt"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txt2" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txt4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="unmail@servimal.com"
                            android:textColor="@color/colorText"
                            android:textSize="14dp"
                            app:fontFamily="sans-serif-ligt"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txt3" />

                        <CheckBox
                            android:id="@+id/chkseleccion"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginBottom="24dp"
                            android:backgroundTint="@color/colorPrimaryTomato"
                            android:buttonTint="@color/colorPrimaryTomato"
                            android:checked="true"
                            android:elevation="12dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <!--******ACÁ CIERRA BLOQUE DE CUOTA INDIVIDUAL
                        //LOS BLOQUE SIGUIENTES DEBERAN BORRARSE CUANDO SE CREEN LAS CUOTAS DINAMICAMENTE

                        /CARD3-->
                <!--BLOQUE QUE SE DEBE CREAR DINAMICAMENTE. DESDE AQUI HASTA ******-->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card2"
                    app:strokeColor="@color/colorPrimaryTomato"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/shapeableImageView3"
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircularImageView"
                            tools:srcCompat="@tools:sample/avatars" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txt23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="5dp"
                            android:text="Marta Olazabal"
                            android:textColor="@color/colorText"
                            android:textSize="18sp"
                            app:fontFamily="sans-serif-ligt"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txt33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="5dp"
                            android:text="Socio N° 4567"
                            android:textColor="@color/colorText"
                            android:textSize="22dp"
                            app:fontFamily="sans-serif-ligt"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txt23" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txt43"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="unmail@servimal.com"
                            android:textColor="@color/colorText"
                            android:textSize="14dp"
                            app:fontFamily="sans-serif-ligt"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txt33" />

                        <CheckBox
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginBottom="24dp"
                            android:backgroundTint="@color/colorPrimaryTomato"
                            android:buttonTint="@color/colorPrimaryTomato"
                            android:checked="false"
                            android:elevation="12dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <!--******ACÁ CIERRA BLOQUE DE CUOTA INDIVIDUAL
                        //LOS BLOQUE SIGUIENTES DEBERAN BORRARSE CUANDO SE CREEN LAS CUOTAS DINAMICAMENTE

                        /CARD2-->

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card1"
                    app:strokeColor="@color/colorPrimaryTomato"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/shapeableImageView2"
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircularImageView"
                            tools:srcCompat="@tools:sample/avatars" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txt22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="5dp"
                            android:text="Marta Olazabal"
                            android:textColor="@color/colorText"
                            android:textSize="18sp"
                            app:fontFamily="sans-serif-ligt"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txt32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="5dp"
                            android:text="Socio N° 4567"
                            android:textColor="@color/colorText"
                            android:textSize="22dp"
                            app:fontFamily="sans-serif-ligt"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txt22" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txt42"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="unmail@servimal.com"
                            android:textColor="@color/colorText"
                            android:textSize="14dp"
                            app:fontFamily="sans-serif-ligt"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txt32" />

                        <CheckBox
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginBottom="24dp"
                            android:backgroundTint="@color/colorPrimaryTomato"
                            android:buttonTint="@color/colorPrimaryTomato"
                            android:checked="false"
                            android:elevation="12dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <!--******ACÁ CIERRA BLOQUE DE CUOTA INDIVIDUAL
                        //LOS BLOQUE SIGUIENTES DEBERAN BORRARSE CUANDO SE CREEN LAS CUOTAS DINAMICAMENTE

                        /CARD2-->
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHome"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="Enviar aviso de vencimiento"
        android:textColor="@color/colorChipBackground"
        app:cornerRadius="15dp"
        app:icon="@drawable/baseline_mail_outline_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

