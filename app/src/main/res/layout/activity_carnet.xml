<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/carnet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.perfil.CarnetActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/toolbar_bg"
        android:backgroundTint="@color/colorPrimaryTomato"
        android:elevation="10dp"
        android:paddingTop="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/outline_arrow_left_alt_24"
        app:menu="@menu/toolbar_menu"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/materialTextView"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:elevation="12dp"
        android:text="Carnet de Socio"
        android:textAlignment="center"
        android:paddingTop="20dp"
        android:textColor="@color/colorOnSecondary"
        android:textSize="28sp"
        app:fontFamily="sans-serif-regular"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCentral"
        android:layout_width="328dp"
        android:layout_height="465dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:elevation="12dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">


        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/logo" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtSocioNro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:text="Socio N°"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            app:fontFamily="sans-serif-medium" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:elevation="12dp"
            android:text="2345"
            android:textColor="@color/colorText"
            android:textSize="22sp"
            app:fontFamily="sans-serif-medium" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:elevation="12dp"
            android:text="Ana Pérez"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            app:fontFamily="sans-serif-regular" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtDni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="20dp"
            android:elevation="12dp"
            android:text="DNI:"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            app:fontFamily="sans-serif-regular" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtNroDni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="120dp"
            android:elevation="12dp"
            android:paddingStart="15dp"
            android:text="12345678"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            app:fontFamily="sans-serif-regular" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            app:srcCompat="@drawable/codigoqr" />


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDescargar"
        android:layout_width="158dp"
        android:layout_height="53dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="Descargar"
        android:textColor="@color/colorChipBackground"
        app:cornerRadius="15dp"
        app:icon="@drawable/outline_download_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardCentral" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHome"
        android:layout_width="158dp"
        android:layout_height="53dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="Ir a inicio"
        android:textColor="@color/colorChipBackground"
        app:cornerRadius="15dp"
        app:icon="@drawable/outline_home_24"
        app:layout_constraintEnd_toStartOf="@+id/btnDescargar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardCentral" />



</androidx.constraintlayout.widget.ConstraintLayout>