<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".carnet">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:background="@drawable/toolbar_bg"
        android:backgroundTint="@color/colorPrimaryTomato"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/outline_arrow_left_alt_24"
        app:menu="@menu/toolbar_menu"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/materialTextView"
        android:layout_width="305dp"
        android:layout_height="59dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="12dp"
        android:paddingTop="10dp"
        android:text="Carnet de Socio"
        android:textAlignment="center"
        android:textColor="@color/colorOnSecondary"
        android:textSize="28sp"
        app:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCentral"
        android:layout_width="328dp"
        android:layout_height="465dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:elevation="12dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">


        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="90dp"
            android:layout_height="93dp"
            android:layout_gravity="right"
            app:srcCompat="@drawable/logo" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtSocioNro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:elevation="12dp"
            android:paddingStart="15dp"
            android:text="Socio N°"
            android:textColor="@color/colorText"
            android:textSize="22sp"
            app:fontFamily="sans-serif-medium" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:elevation="12dp"
            android:paddingStart="15dp"
            android:text="2345"
            android:textColor="@color/colorText"
            android:textSize="22sp"
            app:fontFamily="sans-serif-medium" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:elevation="12dp"
            android:paddingStart="15dp"
            android:text="Ana Pérez"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            app:fontFamily="sans-serif-light" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtDni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:elevation="12dp"
            android:paddingStart="15dp"
            android:text="DNI:"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            app:fontFamily="sans-serif-light" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtNroDni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="95dp"
            android:elevation="12dp"
            android:paddingStart="15dp"
            android:text="12345678"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            app:fontFamily="sans-serif-light" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="251dp"
            android:layout_height="257dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/codigoqr" />


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDescargar"
        android:layout_width="158dp"
        android:layout_height="53dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="Descargar"
        android:textColor="@color/colorChipBackground"
        app:cornerRadius="15dp"
        app:icon="@drawable/outline_download_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardCentral" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHome"
        android:layout_width="158dp"
        android:layout_height="53dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="Home"
        android:textColor="@color/colorChipBackground"
        app:cornerRadius="15dp"
        app:icon="@drawable/outline_home_24"
        app:layout_constraintEnd_toStartOf="@+id/btnDescargar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardCentral" />



</androidx.constraintlayout.widget.ConstraintLayout>